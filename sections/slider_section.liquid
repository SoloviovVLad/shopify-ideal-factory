<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js" defer="defer"></script>
<script src="{{ 'multi_slider' | append: '.js' | asset_url }}" defer="defer"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"/>

<div class="section_in">
  <div class="swiper-container multi_swiper swiper-backface-hidden multiSliderWrapper">
    <div class="swiper-button-drag cursorDrag">Drag</div>

    <div class="swiper-buttons-block">
      <button class="swiper-button-prev arrow_multi_prev">
        <img class="cover_img" src="assets\arrow_prev_multi_slider.svg" alt="">
      </button>
      <button class="swiper-button-next arrow_multi_next">
        <img class="cover_img" src="assets\arrow_next_multi_slider.svg" alt="">
      </button>
    </div>

    <div class="multi_swiper_inner swiper-wrapper">

      {%- for block in section.blocks -%}

        <div class="multi_slide swiper-slide" href="#">
          <div class="multi_slide__in">
            <div class="multi_slide__photo">
              {%- if block.settings.image != blank -%}
                <img class="cover_img" src="{{ block.settings.image | img_url: "master" }}" alt="">
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
              {% endif %}
            </div>
            <div class="multi_slide__content">
              <h3 class="multi_slide__title section_title section_title--mod_size_2"></h3>
              <p class="multi_slide__descr section_descr">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Tincidunt aliquet interdum massa in pulvinar ante. Tincidunt vivamus nulla magna semper lacus lacinia maecenas sed. Arcu commodo urna, phasellus neque. Tincidunt vivamus nulla magna semper lacus lacinia maecenas sed. Arcu commodo urna, phasellus neque.
              </p>
            </div>
          </div>
        </div>

      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Slider section",
    "tag": "section",
    "class": "section",
    "blocks": [
      {
        "type": "slide",
        "name": "slide",
        "limit": 6,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Your image"
          }, {
            "type": "text",
            "id": "title",
            "default": "Where imagination & creativity come to life",
            "label": "Title"
          }, {
            "id": "descr",
            "type": "text",
            "default": "lorem ipsum AdAF ASDG AS DFJKG JADSFGHHA",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slider section",
        "blocks": [
          {
            "type": "slide"
          }, {
            "type": "slide"
          }
        ]
      }
    ]
  }
{% endschema %}

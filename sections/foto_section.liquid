<link rel="stylesheet" href="{{ 'foto_section.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'foto_section.css' | asset_url | stylesheet_tag }}</noscript>

	<div class="section_in">
		<div class="img_right_section__wrapper">
			{%- for block in section.blocks -%}
				{%- case block.type -%}
					{%- when 'content' -%}
						<div class="img_right_section__content">
							<h2 class="img_right_section__title">
								{{ block.settings.title | escape }}
							</h2>
							<p class="img_right_section__descr">
								{{ block.settings.descr | escape}}
							</p>
						</div>
					{%- when 'image' -%}
						<div class="img_right_section__photo">
							{%- if block.settings.image != blank -%}
								<img class="img_right_section__img cover_img" src="{{ block.settings.image | img_url: "master" }}" alt="" >
							{%- else -%}
								{{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
							{% endif %}
						</div>
				{%- endcase -%}
			{%- endfor -%}
		</div>
	</div>


{% schema %}
{
  "name": "Foto Section",
  "tag": "section",
  "class": "section",
	"blocks": [
		{
			"type": "content",
			"name": "content",
			"limit": 1,
			"settings": [
				{
					"id": "title",
					"type": "text",
					"default": "Where imagination & creativity come to life",
					"label": "Title"
				},
				{
					"id": "descr",
					"type": "text",
					"default": "lorem ipsum AdAF ASDG AS DFJKG JADSFGHHA",
					"label": "Description"
				}
			]
		},
		{
			"type": "image",
			"name": "Image",
			"limit": 1,
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Your image"
				}
			]
		}
	],
	"presets": [
		{
			"name": "Foto Section",
			"blocks": [
				{
					"type": "content"
				},
				{
					"type": "image"
				}
			]
		}
	]	
}
{% endschema %}

<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js" defer="defer"></script>
<script src="{{ 'scrollbar_slider' | append: '.js' | asset_url }}" defer="defer"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"/>

<section class="section">
  <div class="section_in section_scrollbar_in">
    <div class="swiper-container scrollbar_swiper">
      <div class="swiper-wrapper scrollbar_swiper__inner">
        {%- for block in section.blocks -%}

          <div class="swiper-slide scrollbar_slide">
            <div class="scrollbar_slide__photo">
              {%- if block.settings.image != blank -%}
                <img class="cover_img" src="{{ block.settings.image | img_url: "master" }}" alt="">
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
              {% endif %}
            </div>
          </div>

        {% endfor %}

      </div>

      <div class="swiper-scrollbar">
        <div class="swiper-scrollbar-drag"></div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Scrollbar Section",
    "tag": "section",
    "class": "section",
    "blocks": [
      {
        "type": "slide",
        "name": "slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Your image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Scrollbar section",
        "blocks": [
          {
            "type": "slide"
          },
          {
            "type": "slide"
          },
          {
            "type": "slide"
          },
          {
            "type": "slide"
          },
          {
            "type": "slide"
          }
        ]
      }
    ]
  }
{% endschema %}